<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MySettingInfoLabel" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_marginTop">@dimen/margin_setting_info</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySettingInfoEditStyle">
        <item name="android:lines">1</item>
        <item name="android:layout_margin">@dimen/margin_setting_info_edit_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MySettingInfoEntranceStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/color_entrance</item>
    </style>

    <style name="MyHomeBottomNavigation">
        <item name="menu">@menu/home_bn_menu</item>
    </style>

    <style name="MyHeaderItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_friend_list_header_start</item>
        <item name="android:layout_marginTop">@dimen/margin_friend_list_header</item>
        <item name="android:layout_marginBottom">@dimen/margin_friend_list_header</item>
    </style>

    <style name="MyShapeImageStyle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyChatRoomButtonStyle">
        <item name="android:layout_marginStart">@dimen/margin_chat_room</item>
        <item name="android:backgroundTint">@color/color_submit</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyChatRoomEditTextStyle">
        <item name="android:background">@color/white</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/padding_chat_room</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyChatRoomToolBarStyle">
        <item name="navigationIcon">@drawable/icon_back</item>
        <item name="menu">@menu/chat_room_ab_menu</item>
    </style>
</resources>